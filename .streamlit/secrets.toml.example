# Streamlit Secrets 配置示例
# 复制此文件为 secrets.toml 并填入真实密钥
# ⚠️ 注意: secrets.toml 不应提交到 Git！

# Alpha Vantage API 配置（可选）
# 用于获取真实新闻数据
[api]
alpha_vantage_key = "YOUR_API_KEY_HERE"

# 数据库配置（如果使用云数据库）
[database]
# SQLite 本地路径（默认）
# local_path = "financial_data.db"

# PostgreSQL 配置示例（可选）
# [postgres]
# host = "your-db-host.com"
# port = 5432
# database = "your_database"
# user = "your_username"
# password = "your_password"

# 应用配置
[app]
# 是否在生产环境
production = false
# 是否启用真实数据获取
enable_real_data = false
